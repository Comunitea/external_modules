<odoo>
    <data>


        <!--   Inherit Purchase Order form  -->
        <record id="purchase_line_section_purchase_order_form" model="ir.ui.view">
            <field name="name">purchase.line.section.purchase.order.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='order_line']" position="attributes">
                    <attribute name="widget">section_and_note_one2many</attribute>
                </xpath>

                <xpath expr="//field[@name='order_line']/tree" position="inside">
                    <control>
                        <create string="Add a line"/>
                        <create string="Add a note" context="{'default_display_type': 'line_note'}"/>
                        <create string="Add a section" context="{'default_display_type': 'line_section'}"/>
                    </control>
                    <field name="display_type" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='order_line']/tree/field[@name='name']" position="attributes">
                    <attribute name="widget">section_and_note_text</attribute>
                </xpath>
                <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="attributes">
                    <attribute name="attrs">{'required': [('display_type', '=', False)], 'readonly': [('state', 'in',
                        ('purchase', 'to approve','done', 'cancel'))]}
                    </attribute>
                </xpath>
                <xpath expr="//field[@name='order_line']/tree/field[@name='date_planned']" position="attributes">
                    <attribute name="attrs">{'required': [('display_type', '=', False)]}</attribute>
                </xpath>
                <xpath expr="//field[@name='order_line']/tree/field[@name='product_uom']" position="attributes">
                    <attribute name="attrs">{'required': [('display_type', '=', False)]}</attribute>
                </xpath>

                <xpath expr="//field[@name='order_line']/form" position="inside">
                    <field name="display_type" invisible="1"/>
                    <field name="sequence" invisible="1"/>
                </xpath>
                <!--<xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="attributes">
                    <attribute name="attrs">{'required': [('display_type', '=', False)], 'readonly': [('state', 'in',
                        ('purchase', 'to approve','done', 'cancel'))]}
                    </attribute>
                </xpath>
                <xpath expr="//field[@name='order_line']/tree/field[@name='date_planned']" position="attributes">
                    <attribute name="attrs">{'required': [('display_type', '=', False)]}</attribute>
                </xpath>
                <xpath expr="//field[@name='order_line']/tree/field[@name='product_uom']" position="attributes">
                    <attribute name="attrs">{'required': [('display_type', '=', False)]}</attribute>
                </xpath>
                -->
            </field>
        </record>

        <!--Menu Item-->
        <record model="ir.actions.act_window" id="aw_document_format">
            <field name="name">Document format</field>
            <field name="res_model">ir.sequence</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem name="Document Format" parent="account.menu_finance_configuration" sequence="0" id="menu_so_format"
                  action="aw_document_format"/>

    </data>
</odoo>
<?xml version="1.0"?>
<openerp>
    <data noupdate="1">




        <record id="rappel_mail_advice" model="email.template">
            <field name="name">Rappel Email Advice Half Time</field>
            <field name="email_from">${(object.user_id.email or object.company_id.email or 'noreply@localhost')|safe}</field>
            <field name="reply_to">${(object.user_id.email or object.company_id.email or 'noreply@localhost')|safe}</field>

            <field name="subject">Aviso de Rappel</field>
            <!--<field name="model_id" ref="rappel.model_rappel_current_info"/>-->
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="partner_to">${ctx.get('partner_id') or ''}</field>
            <field name="lang">${ctx.get('partner_lang') or ''}</field>

            <field name="auto_delete" eval="False"/>

            <field name="body_html"><![CDATA[

                <html>
                    <head>
                        <meta http-equiv="Content-type" content="text/html; charset=utf-8" />
                        <title>Rappels ${ctx['partner_name']}</title>
                        <style>
                            span.oe_mail_footer_access {
                                display:block;
                                text-align:center;
                                color:grey;
                            }
                        </style>
                    </head>

                    <body>
                        <div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: #FFF; ">
                        <p>Hola ${ctx['partner_name']}</p><br>
                        <p>Le informamos de la situación actual de sus rappels.</p><br>
                        <div>
                        % for line in ctx['values']:
                            <p>
                            <em>${line.concepto}:</em>

                            % if line.advice_timing == 'fixed':
                                <p>A falta de ${line.timing} días para el ${line.date_end}.</p>
                            % endif

                            % if line.advice_timing == 'variable':
                                <p>En el ${line.timing} % del período ${line.date_start} - ${line.date_end}.</p>
                            % endif

                            %if line.curr_qty:
                                <p>Cantidad: ${line.curr_qty}</p>
                            %endif
                            %if line.section_id:
                                <p>Siguiente Objetivo: ${line.section_goal}</p>
                            %endif
                            %if line.amount:
                                <p>Liquidación actual: ${line.amount}</p>
                            %endif
                            </p>

                        % endfor
                        </div>

                        <div>
                        <p>
                        </div>
                        <br>
                        <p>Si tiene cualquier pregunta, no dude en contactarnos.</p>
                        <p>Un cordial saludo</p>
                        <br>
                        <br>
                        <div style="width: 375px; margin: 0px; padding: 0px; background-color: #8E0000; border-top-left-radius: 5px 5px; border-top-right-radius: 5px 5px; background-repeat: repeat no-repeat;">
                            <h3 style="margin: 0px; padding: 2px 14px; font-size: 12px; color: #DDD;">
                                <strong style="text-transform:uppercase;">${object.company_id.name}</strong></h3>
                        </div>
                        <div style="width: 347px; margin: 0px; padding: 5px 14px; line-height: 16px; background-color: #F2F2F2;">
                            <span style="color: #222; margin-bottom: 5px; display: block; ">
                            % if object.company_id.street:
                                ${object.company_id.street}<br>
                            % endif
                            % if object.company_id.street2:
                                ${object.company_id.street2}<br>
                            % endif
                            % if object.company_id.city or object.company_id.zip:
                                ${object.company_id.zip} ${object.company_id.city}<br>
                            % endif
                            % if object.company_id.country_id:
                                ${object.company_id.state_id and ('%s, ' % object.company_id.state_id.name) or ''} ${object.company_id.country_id.name or ''}<br>
                            % endif
                            </span>
                            % if object.company_id.phone:
                                <div style="margin-top: 0px; margin-right: 0px; margin-bottom: 0px; margin-left: 0px; padding-top: 0px; padding-right: 0px; padding-bottom: 0px; padding-left: 0px; ">
                                    Teléfono:&nbsp; ${object.company_id.phone}
                                </div>
                            % endif
                            % if object.company_id.website:
                                <div>
                                    Web :&nbsp;<a href="${object.company_id.website}">${object.company_id.website}</a>
                                </div>
                            %endif
                            <p></p>
                        </div>
                        </div>
                    </body>
                </html>
                ]]>
                </field>
        </record>



    </data>
</openerp>

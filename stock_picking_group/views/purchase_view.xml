<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="purchase_order_form_move_line_tree" model="ir.ui.view">
        <field name="name">purchase.order.form.move.line.tree</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button name="action_view_move_lines" type="object"
                        class="oe_stat_button"
                        icon="fa-list"
                        attrs="{'invisible': [('move_line_count', '=', 0)]}">
                    <field name="move_line_count" widget="statinfo" string="Move lines"/>
                </button>
            </div>
        </field>
    </record>

</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_move_form" model="ir.ui.view">
        <field name="name">stock.move.form.picking.group</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_move_form"/>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <field name="state" position="after">
                 <field name="pick_state" widget="statusbar" statusbar_visible="assigned,picked,done"/>
            </field>
             <field name="state" position="before">
                    <button name="action_force_assign_picking" attrs="{'invisible': [('state', 'not in', ('confirmed', 'assigned', 'partially_available'))]}"
                            string="(RE) Assign pick" type="object" class="oe_highlight" groups="base.group_user"/>
            </field>
            <group name="origin_grp" position="after">
                <group name="origin_sale" string="Order Info.">
                    <field name="picking_id"/>
                    <field name="picking_type_id"/>
                    <field name="sale_id"/>
                    <field name="purchase_id"/>
                    <field name="sale_price"/>
                </group>
            </group>
        </field>
    </record>
    <record id="view_move_extra_tree" model="ir.ui.view">
        <field name="name">view.move.extra.tree</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_move_tree"/>
        <field name="arch" type="xml">
            <field name="reference" position="after">
                <field name="picking_id"/>
            </field>
            <field name="product_uom" position="after">

                <field name="sale_id"/>
                <field name="purchase_id"/>
                <field name="sale_price"/>

            </field>

        </field>
    </record>

    <record id="view_move_search_group" model="ir.ui.view">
            <field name="name">stock.move.search.group</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_move_search"/>
            <field name="arch" type="xml">
                 <xpath expr="//field[@name='product_id']" position="after">
                    <field name="picking_id"/>
                    <field name="sale_id"/>
                    <field name="purchase_id"/>
                    <separator/>
                </xpath>
                <xpath expr="//filter[@name='done']" position="after">
                    <separator/>
                    <filter string="From Sale order" name="sale_related" domain="[('sale_id','!=',False)]" help="Stock moves that are ready to be picked"/>
                    <filter string="From Purchase order" name="purchase_related" domain="[('purchase_id','!=',False)]" help="Stock moves that are ready to be picked"/>
                    <separator/>
                    <filter string="With picking" name="with_picking" domain="[('picking_id', '!=', False)]" help="Moves pending to put in a picking"/>
                    <filter string="Without Picking" name="without_picking" domain="[('picking_id', '=', False)]" help="Moves pending to put in a picking"/>
                </xpath>
                <!-- Group by sale origin -->
                <xpath expr="//filter[@name='groupby_picking_id']" position="after">
                     <separator/>
                    <filter string="Picking type" name="groupby_picking_type"  context="{'group_by':'picking_type_id'}"/>
                    <filter string="Origin Sale" name="groupby_origin_sale" domain="[('sale_id','!=',False)]"  context="{'group_by':'sale_id'}"/>
                    <filter string="Origin Purchase" name="groupby_origin_purchase" domain="[('purchase_id','!=',False)]" context="{'group_by':'purchase_id'}"/>
                    <filter string="Delivery Address" name="groupby_delivery_address" domain="[('sale_id','!=',False)]"  context="{'group_by':'partner_id'}"/>
                    <filter string="Supplier" name="groupby_supplier" domain="[('purchase_id','!=',False)]"  context="{'group_by':'partner_id'}"/>
                     <separator/>
                </xpath>

            </field>
        </record>
</odoo>

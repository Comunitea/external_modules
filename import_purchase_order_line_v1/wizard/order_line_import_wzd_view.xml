<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_purchase_order__linewzd_form" model="ir.ui.view">
        <field name="name">view.purchase.order.line.wzd.form</field>
        <field name="model">purchase.order.line.import.wzd</field>
        <field name="arch" type="xml">
            <form string="Import purchase order lines">
                <div name="help">
                    <h2>Select file to import</h2>
                </div>
                <group>
                    <field name="name"/>
                    <field name="partner_id" required="True" context="{'default_ref': 'import_purchase_order'}"/>
                    <field name="create_product"/>
                    <field name="file" required="True" filename="filename"/>
                </group>
                <footer>
                    <button name="import_order" type="object" class="btn-primary" string="Import orders"/>
                    <button special="cancel" string="Cancel" class="oe_link"/>
                </footer> 
            </form>
        </field>
    </record>

   
    <record id="action_import_purchase_orders" model="ir.actions.act_window">
        <field name="name">Import purchase orders</field>
        <field name="res_model">purchase.order.line.import.wzd</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_action_import_purchase_orders" name="Import purchase" action="action_import_purchase_orders" parent="purchase.menu_procurement_management" sequence="99"/>
    
    
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="view_move_tree_qties" model="ir.ui.view">
            <field name="name">stock.move.tree</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_move_tree"/>
            <field name="arch" type="xml">
                <field name="product_uom_qty" position="after">
                    <field name="reserved_availability"/>
                    <field name="quantity_done"/>
                </field>
                <field name="reference" position="after">
                    <field name="picking_id" invisible="context.get('hide_picking', True)"/>
                </field>
                <field name="reference" position="attributes">
                    <attribute name="invisible">context.get('hide_reference', False)</attribute>
                </field>
                <field name="product_id" position="attributes">
                    <attribute name="invisible">context.get('hide_product', False)</attribute>
                </field>
            </field>
        </record>


<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_stock_move_lots_at" model="ir.ui.view">
        <field name="name">stock.move.lots.form.at.form</field>
        <field name="model">stock.lot</field>
         <field name="inherit_id" ref="stock.view_production_lot_form" />
        <field name="arch" type="xml">
            <field name="ref" position="after">
                <field name="location_id" readonly="0" attrs="{'required': [('virtual_tracking', '=', True)]}"/>
                <!--field name="real_location_id" readonly="0" attrs="{'required': [('virtual_tracking', '=', True)]}"/-->
                <field name="virtual_tracking" readonly="0" />
                <!--field name="move_line_ids" readonly="1" invisible="1" /-->

            </field>
            <div name="button_box" position="inside">
                <button 
                    class="oe_stat_button"
                    name="show_tracking_move_ids"
                    string="Tracking"
                    type="object"
                    icon="fa-barcode"
                    />
            </div>
            
        </field>
    </record>
    <record id="view_production_lot_tree" model="ir.ui.view">
        <field name="name">stock.move.lots.tree.at</field>
        <field name="model">stock.lot</field>
         <field name="inherit_id" ref="stock.view_production_lot_tree" />
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="decoration-muted">location_id_usage != 'internal'</attribute>
            </xpath>
            <field name="create_date" position="before">
                <field name="product_qty" invisible="0" />
                <field name="location_id_usage" invisible="1"/>
                <field name="virtual_tracking" invisible="1" />
            </field>

        </field>
    </record>
    <record id="search_product_lot_filter_inherit_product_expiry" model="ir.ui.view">
        <field name="name">stock.lot.search.inherit</field>
        <field name="model">stock.lot</field>
        <field name="inherit_id" ref="stock.search_product_lot_filter" />
        <field name="arch" type="xml">
            <field name="product_id" position="after">
                <field
                    name="location_id"
                    string="Product Lots"
                    filter_domain="['|',('name','ilike',self),('barcode','ilike',self)]"
                />
                <separator />
                <filter
                    string="A. Tracking"
                    name="virtual_tracking"
                    domain="[('product_id.virtual_tracking', '=', True)]"
                />
                <filter
                    string="Available"
                    name="available"
                    context="{'available': True}"
                />
            </field>
            <xpath expr="//filter[@name='group_by_product']" position="after">
                <filter
                    name="group_by_location"
                    string="Location"
                    domain="[]"
                    context="{'group_by':'location_id'}"
                />

            </xpath>
        </field>
     </record>

</odoo>

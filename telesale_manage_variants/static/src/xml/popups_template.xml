<?xml version="1.0" encoding="utf-8"?>

<templates id="template_popups" inherit_id="telesale.template_popups">

    <t t-name="Grid-PopUp">

        <div class="grid_popup">
            <div class="close-block">
                <div class="col-xs-12 fullheight centerinside">
                  <div class="centerthis">
                    <button id="close-filter">Close Grid</button>
                  </div>
                </div>
            </div>
            <div id="placeholder-grid-widget">
            </div>
        </div>
    </t>


    <t t-name="Grid-Widget">

        <div class="grid-content">
            <table class="grid-table">
                <tr>
                    <thead>
                        <th></th>
                        <t t-foreach="widget.get_column_values()" t-as="col_obj">
                            <th t-att-attr-id="col_obj.id"><t t-esc="col_obj.name"/></th>
                        </t>
                    </thead>
                    <tbody>
                        <t t-foreach="widget.get_row_values()" t-as="row_obj">
                            <tr>
                                <th t-att-attr-id="row_obj.id"><t t-esc="row_obj.name"/></th>
                                <t t-foreach="widget.get_column_values()" t-as="col_obj">
                                    <t t-set="cell" t-value="widget.get_cell_obj(col_obj.id, row_obj.id)"/>
                                    <td>
                                        <div class="grid-cell" t-att-variant-id="cell.id">
                                            <div>
                                                Stock: <span t-esc="cell.stock"/>
                                            </div>
                                            <div>
                                                Price: <span t-esc="cell.price"/>
                                            </div>
                                            <div>
                                                <input class="add-qty mandatory" t-att-variant-id="cell.id" type="number" step="0.01"/>
                                            </div>
                                        </div>
                                    </td>
                                </t>
                            </tr>
                        </t>
                    </tbody>
                </tr>
            </table>

            <t t-foreach="widget.variant_objs" t-as="variant">
                <div class="grid-cell" t-att-variant-id="variant.id">
                    <h2><t t-esc="variant.display_name"/></h2>
                </div>
            </t>
        </div>
    </t>

</templates>

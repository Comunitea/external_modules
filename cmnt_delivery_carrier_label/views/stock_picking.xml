<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_picking_withcarrier_out_form" model="ir.ui.view">
        <field name="name">stock.picking.inherit.view.form</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="delivery.view_picking_withcarrier_out_form"/>
        <field name="arch" type="xml">
            <header position="inside">
                <button name="remove_tracking_info" string="Remove Tracking" type="object"
                    confirm="Are you sure you want to remove the tracking info of this batch?"
                    attrs="{'invisible': [
                        ('carrier_tracking_ref', '=', False)
                    ]}"/>
            </header>
            <field name="shipping_weight" position="replace">
                <field name="carrier_weight"/>
                <field name="carrier_packages"/>
                <field name="payment_on_delivery"/>
                <field name="pdo_quantity"
                    attrs="{'invisible': [('payment_on_delivery', '=', False)], 'required': [('payment_on_delivery', '!=', 'False')]}"/>
                <field name="failed_shipping"/>
            </field>
            <field name="carrier_id" position="after">
                <field name="carrier_service"/>
            </field>
            <button name="action_generate_carrier_label" position="replace">
                <button name="action_generate_carrier_label"
                help="Create Shipping Label ðŸšš"
                attrs="{'invisible': ['|', '|', ('carrier_id', '=', False), ('state', '!=', 'done'), ('carrier_tracking_ref', '!=', False)]}"
                string="Shipping Label ðŸšš" type="object"/>
                <button name="print_created_labels" type="object"
                    attrs="{'invisible': ['|', '|', ('carrier_id', '=', False), ('state', '!=', 'done'), ('carrier_tracking_ref', '==', False)]}"
                    string="Print shipping label"/>
            </button>
        </field>
    </record>

    <record id="view_picking_label_tree" model="ir.ui.view">
        <field name="name">stock.picking.label.tree</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.vpicktree"/>
        <field name="arch" type="xml">
            <field name="state" position="after">
                <field name="failed_shipping"/>
            </field>
        </field>
    </record>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="print_attendance">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                <t t-call="web.internal_layout">
                    <div class="page">
                        <div class="oe_structure"/>
                        <div class="row">
                            <div class="col-xs-12 text-center">
                                <p><strong>Worker attendance record</strong></p>
                                <p>Según artículos 34.7 y 34.9 del Estatuto de los trabajadores.</p>
                            </div>
                        </div>
                        <div class="row" style="font-size:11px">
                            <div class="col-xs-6 text-right">
                                <p>From: <span t-esc="data['form']['from_date']" t-options='{"widget": "date"}'/></p>
                            </div>
                            <div class="col-xs-6">
                                <p>To: <span t-esc="data['form']['to_date']" t-options='{"widget": "date"}'/></p>
                            </div>
                        </div>

                        <table class="table table-condensed" style="font-size:11px">
                            <thead>
                                <tr colspan="3" class="text-center">Company data</tr>
                                <tr>
                                    <th>business name</th>
                                    <th>VAT</th>
                                    <th>CCC</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><span t-field="o.address_id.name"/></td>
                                    <td><span t-field="o.address_id.vat"/></td>
                                    <td></td>
                                </tr>
                            </tbody>
                        </table>
                        <table class="table table-condensed" style="font-size:11px">
                            <thead>
                                <tr colspan="5" class="text-center">Worker data</tr>
                                <tr>
                                    <th>Name and surname</th>
                                    <th>naf</th>
                                    <th>nif</th>
                                    <th>Contract</th>
                                    <th>% Jor</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><span t-field="o.name"/></td>
                                    <td><span t-field="o.sudo().ssnid"/></td>
                                    <td><span t-field="o.sudo().identification_id"/></td>
                                    <td>100</td>
                                    <td>100.0</td>
                                </tr>
                            </tbody>
                        </table>
                        <table class="table table-condensed"  style="font-size:11px">
                            <thead>
                                <tr>
                                    <th rowspan="2">Day</th>
                                    <th rowspan="2">Ordinary</th>
                                    <th colspan="2">Complementarias</th>
                                    <th colspan="2">Extras</th>
                                    <th rowspan="2">In out hours</th>
                                </tr>
                                <tr>
                                    <th>Pactadas</th>
                                    <th>Voluntarias</th>
                                    <th>F.M.</th>
                                    <th>Normales</th>
                                </tr>
                            </thead>
                            <t t-set="cont_day" t-value="0"/>
                            <tbody>
                                <tr t-foreach="attendances[o.id]" t-as="attendance">
                                    <td>
                                        <span t-esc="attendance['day']"/>
                                        <t t-set="cont_day" t-value="cont_day + 1 "/>
                                    </td>
                                    <td>
                                        <t t-if="attendance['ord_hours']">
                                            <span t-esc="'%s:%02.0f' % tuple(int(round(x)) for x in divmod(attendance['ord_hours']*60,60))"/>
                                        </t>
                                    </td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td>
                                        <t t-if="attendance['extra']">
                                            <span t-esc="'%s:%02.0f' % tuple(int(round(x)) for x in divmod(attendance['extra']*60,60))"/>
                                        </t>
                                    </td>
                                    <td>
                                        <span t-esc="attendance['in_out_str']"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="row">
                            <div class="col-xs-5 col-xs-offset-1">
                                <table class="table table-condensed"  style="font-size:11px">
                                    <thead>
                                        <tr>
                                            <th>Total</th>
                                            <th>Ordinarias</th>
                                            <th>Complementarias</th>
                                            <th>Extras</th>
                                            <th>Media</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>
                                                <span t-if="totals[o.id]['total']" t-esc="'%s:%02.0f' % tuple(int(round(x)) for x in divmod(totals[o.id]['total']*60,60))"/>
                                            </td>
                                            <td>
                                                <span t-if="totals[o.id]['ordinary']" t-esc="'%s:%02.0f' % tuple(int(round(x)) for x in divmod(totals[o.id]['ordinary']*60,60))"/>
                                            </td>
                                            <td>
                                                <span t-if="totals[o.id]['complementary']" t-esc="'%s:%02.0f' % tuple(int(round(x)) for x in divmod(totals[o.id]['complementary']*60,60))"/>
                                            </td>
                                            <td>
                                                <span t-if="totals[o.id]['extra']" t-esc="'%s:%02.0f' % tuple(int(round(x)) for x in divmod(totals[o.id]['extra']*60,60))"/>
                                            </td>
                                            <td>
                                                <span t-if="totals[o.id]['total']" t-esc="'%s:%02.0f' % tuple(int(round(x)) for x in divmod((totals[o.id]['total'] / cont_day)*60,60))"/>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <div class="col-xs-6" style="text-align:left">
                                <p>Signed: The worker</p>
                                <p style="border-bottom: 1px solid #000; margin-top: 25px; width: 150px;"></p>

                            </div>
                        </div>
                    </div>
                </t>
                </t>
            </t>
        </template>

    </data>
</odoo>

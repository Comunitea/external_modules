<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="sale_order_add_early_payment" inherit_id="sale.report_saleorder_document">
        <xpath expr="//div[@name='total']//table" position="inside">
            <tr class="border-black ep_disc">
                <td>
                    <strong>E.P. Disc. :</strong>
                </td>
                <td class="text-right">
                    <span t-field="doc.early_payment_discount"/> %
                </td>
            </tr>
            <tr class="ep_disc">
                <td>
                    <strong>With E.P. :</strong>
                </td>
                <td class="text-right">
                    <span t-field="doc.early_payment_disc_total" t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                </td>
                </tr>
        </xpath>
    </template>

</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="vpicktree_apk" model="ir.ui.view">
            <field name="name">vpicktree.apk</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.vpicktree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="before">
                    <field name="app_integrated" invisible="1"/>
                    <field name="field_status" invisible="1"/>
                </xpath>
            </field>
     </record>
    <record id="view_picking_form_apk" model="ir.ui.view">
            <field name="name">view_picking_form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='move_ids_without_package']/tree/field[@name='name']" position="before">
                    <field name="field_status_apk" groups="stock.group_tracking_lot" attrs="{'invisible': [('parent.app_integrated','=', False)]}"/>
                    <field name="field_status" groups="stock.group_tracking_lot" attrs="{'invisible': [('parent.app_integrated','=', False)]}"/>
                </xpath>
                <xpath expr="//field[@name='picking_type_code']" position="after">
                    <field name="app_integrated" readonly="1"/>
                    <field name="field_status" invisible="1" readonly="1"/>
                </xpath>

            </field>
     </record>
    <record model="ir.ui.view" id="view_picking_type_form">
            <field name="name">Operation Types Codes</field>
            <field name="model">picking.type.group.code</field>
            <field name="inherit_id" ref="stock_picking_type_group.view_picking_type_form"/>
            <field name="arch" type="xml">
                 <field name="default" position="after">
                     <field name="app_integrated"/>
                 </field>
                <xpath expr="//group[@name='base_erp']" position="after">
                        <group string="APP" attrs="{'invisible': [('app_integrated', '=', False)]}">
                            <group>
                                <field name="tree_picking_fields"/>
                                <field name="tree_move_fields"/>
                                <field name="tree_move_line_fields"/>
                                <field name="form_picking_fields"/>
                                <field name="form_move_fields"/>
                                <field name="form_move_line_fields"/>
                            </group>
                            <group>
                                <field name="field_status_apk"/>
                                <field name="default_location"/>
                                <field name="icon"/>
                            </group>
                        </group>
                </xpath>
            </field>
    </record>
     <record id="view_picking_type_form_wap" model="ir.ui.view">
            <field name="name">Operation Types</field>
            <field name="model">stock.picking.type</field>
            <field name="inherit_id" ref="stock.view_picking_type_form"/>
            <field name="arch" type="xml">
                <field name="warehouse_id" position="after">
                    <field name="app_integrated"/>
                </field>
                <field name="show_operations" position="after">
                    <field name="field_status_apk" attrs="{'invisible': [('app_integrated', '=', False)]}"/>
                    <field name="default_location" attrs="{'invisible': [('app_integrated', '=', False)]}"/>
                </field>
            </field>
        </record>

</odoo>
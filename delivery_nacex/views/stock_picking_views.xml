<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_picking_withcarrier_out_form" model="ir.ui.view">
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="delivery.view_picking_withcarrier_out_form" />
        <field name="arch" type="xml">
            <xpath expr="//header" position='inside'>
                <button
                    name="nacex_get_label"
                    string="Print Correos Express Label"
                    type="object"
                    attrs="{'invisible':[
                        '|',
                        '|',
                        ('carrier_tracking_ref', '=', False),
                        ('delivery_type', '!=', 'nacex'),
                        ('state', '!=', 'done')
                    ]}"
                />
            </xpath>
            <xpath expr="//group[@name='carrier_data']" position="inside">
                <field name="ncx_payment_on_delivery" attrs="{'invisible':[('delivery_type', '!=', 'nacex')]}"/>
                <field name="ncx_pdo_quantity" attrs="{'invisible':[('delivery_type', '!=', 'nacex'), ('ncx_payment_on_delivery', '!=', True)]}"/>
            </xpath>
        </field>
    </record>
</odoo>

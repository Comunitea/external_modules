<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_delivery_carrier_form" model="ir.ui.view">
        <field name="model">delivery.carrier</field>
        <field name="inherit_id" ref="delivery.view_delivery_carrier_form" />
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[1]" position='before'>
                <page
                    string="Nacex Configuration"
                    attrs="{'invisible': [('delivery_type', '!=', 'nacex')]}"
                >
                    <group>
                        <group>
                            <field
                                name="ncx_account"
                                attrs="{
                                    'required': [
                                        ('delivery_type', '=', 'nacex')
                                    ]
                                }"
                            />
                            <field
                                name="ncx_password"
                                password="True"
                                attrs="{
                                    'required': [
                                        ('delivery_type', '=', 'nacex')
                                    ]
                                }"
                            />
                            <field
                                name="ncx_client"
                                attrs="{
                                    'required': [
                                        ('delivery_type', '=', 'nacex')
                                    ]
                                }"
                            />
                            <field
                                name="ncx_delegation"
                                attrs="{
                                    'required': [
                                        ('delivery_type', '=', 'nacex')
                                    ]
                                }"
                            />
                            <field
                                name="ncx_client_department"
                            />
                            <field
                                name="ncx_oldmodel"
                            />
                            <field
                                name="ncx_shipping_return"
                            />
                            <field
                                name="ncx_service_code"
                            />
                            <field
                                name="ncx_printer_model"
                            />
                            <field
                                name="ncx_payment_type"
                            />
                            <field
                                name="ncx_package_type"
                            />
                            <field
                                name="ncx_pod_type"
                            />
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>

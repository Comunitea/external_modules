<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- stock.picking Form View -->
    <record id="cmnt_delivery_carrier_ncx_view_picking_withcarrier_out_form" model="ir.ui.view">
        <field name="name">cmnt.delivery.carrier.ncx.view.picking.withcarrier.out.form</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="delivery.view_picking_withcarrier_out_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='carrier_data']" position="after">
                <group string="ncx Data" attrs="{'invisible': [('carrier_type', '!=', 'ncx')]}">
                    <field name="carrier_type" invisible="1"/>
                    <field name="shipment_reference"/>
                    <field name="failed_shipping"/>
                </group>
            </xpath>
        </field>
    </record>

    <record id="cmnt_delivery_carrier_ncx_carrier_account" model="ir.ui.view">
        <field name="name">cmnt.delivery.carrier.dhl.carrier.account</field>
        <field name="model">carrier.account</field>
        <field name="inherit_id" ref="base_delivery_carrier_label.carrier_account_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[last()]" position="after">
                <group string="ncx configuration" attrs="{'invisible': [('integration_type', '!=', 'ncx')]}">
                    <field name="ncx_client"/>
                    <field name="ncx_delegation"/>
                    <field name="ncx_client_department"/>
                    <field name="ncx_printer_model"/>
                    <field name="ncx_payment_type"/>
                    <field name="ncx_package_type"/>
                    <field name="ncx_pod_type"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>